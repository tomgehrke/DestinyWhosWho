<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mainView">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#ccc</item>
    </style>

    <style name="instructionsTextView">
        <item name="android:textColor">@color/colorInstructions</item>
        <item name="android:textSize">@dimen/instructions_textview_textsize</item>
        <item name="android:padding">@dimen/instructions_textview_padding</item>
    </style>

    <style name="questionLayout">
        <item name="android:background">@color/colorQuestionLayoutBackground</item>
        <item name="android:padding">@dimen/question_layout_padding</item>
        <item name="android:layout_marginLeft">@dimen/question_layout_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/question_layout_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/question_layout_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/question_layout_vertical_margin</item>
    </style>

    <style name="questionTextView">
        <item name="android:textSize">@dimen/question_textview_textsize</item>
        <item name="android:textColor">@color/colorQuestion</item>
    </style>

    <style name="answerBaseStyle">
        <item name="android:textColor">@color/colorAnswers</item>
        <item name="android:textSize">@dimen/answer_textsize</item>
    </style>

    <style name="answerEditText" parent="answerBaseStyle">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="answerRadioGroup" parent="answerBaseStyle">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="answerRadioButton" parent="answerBaseStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="answerCheckBox" parent="answerBaseStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="submitButton">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
